<ul>
  <% @dir.each do |file| %>
    <li>
      <a href='/<%= file %>'><%= file %></a>
      <a href='/<%= file %>/edit'>edit</a>
      <form class='inline' method='post' action='/<%= file %>/delete'>
        <button type='submit'>delete</button>
      </form>
    </li>
  <% end %>
</ul>

<p><a href='/new'>New Document</a></p>

<% if session[:user_name] %>
  <form method="post" action="/users/sign_out">
    <p>Signed in as <%= session[:user_name] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p><a href='/users/sign_in'>Sign In</a></p>
<% end %>